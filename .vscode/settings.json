// Place your settings in this file to overwrite default and user settings.
{
    "editor.insertSpaces": true,
    "editor.tabSize": 2,

    "files.exclude": {
        "**/*.opensdf": true,
        "**/*.sdf": true,
        "**/*.sln": true,
        "**/*.suo": true,
        "**/*.vcxproj*": true,
        "**/*.cd": true,

        "**/*.gitignore": true,
        
        "**/Debug*": true,
        "**/ALT*": true,
        //"**/docs*": true,
        "**/build/testFiles/": true,
        "**/build/*.txt": true,
        "**/*.out": true,
        "**/.vscode": true
    },
    "files.associations": {
      "array": "cpp",
      "system_error": "cpp",
      "type_traits": "cpp",
      "initializer_list": "cpp",
      "*.tcc": "cpp",
      "fstream": "cpp",
      "tuple": "cpp",
      "utility": "cpp",
      "ostream": "cpp",
      "scoped_allocator": "cpp",
      "slist": "cpp",
      "rope": "cpp",
      "cmath": "cpp",
      "chrono": "cpp",
      "functional": "cpp",
      "ratio": "cpp",
      "bitset": "cpp"
    }
  }